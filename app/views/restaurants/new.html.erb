<div class="container">
  <h1 class="mx-auto my-3" style="width: 500px; text-align: center;">Add a new restaurant</h1>
  <div class="container mx-auto" style="width: 600px;">
    <%= simple_form_for @restaurant do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category %>
      <%= f.submit "Add Restaurant", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
